# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  
  config.vm.define "master1" do |master1|
    master1.vm.box = "ubuntu/xenial64"
    master1.vm.network "forwarded_port", guest: 8080, host: 8080
    master1.vm.network "private_network", ip: "192.168.30.10"
    master1.vm.provision "shell", inline: <<-SHELL
      /vagrant/supplimentary/setup.sh master1
    SHELL
  end

  config.vm.define "node1" do |node1|
    node1.vm.box = "ubuntu/xenial64"
    node1.vm.network "private_network", ip: "192.168.30.20"
    node1.vm.provision "shell", inline: <<-SHELL
      bash -c 'nohup /vagrant/supplimentary/setup.sh node >/dev/null 2>&1 &'
    SHELL
  end

  config.vm.define "node2" do |node2|
    node2.vm.box = "ubuntu/xenial64"
    node2.vm.network "private_network", ip: "192.168.30.21"
    node2.vm.provision "shell", inline: <<-SHELL
      bash -c 'nohup /vagrant/supplimentary/setup.sh node >/dev/null 2>&1 &'
    SHELL
  end

  config.vm.define "node3" do |node3|
    node3.vm.box = "ubuntu/xenial64" 
    node3.vm.network "private_network", ip: "192.168.30.22"
    node3.vm.provision "shell", inline: <<-SHELL
      bash -c 'nohup /vagrant/supplimentary/setup.sh node >/dev/null 2>&1 &'
    SHELL
  end

